<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dont_have_domain.football_logo_quiz.arsenal_badge"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/txtRemoveLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="Remove Half Of Incorrect Letters" />

    <TextView
        android:id="@+id/txtRemoveLetterInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="This will remove half of the incorrect letters" />

    <TextView
        android:id="@+id/txtRemoveLetterCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="68dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="Cost - 5 Points" />

    <Button
        android:id="@+id/btnUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignEnd="@+id/txtRemoveLetterInfo"
        android:layout_alignRight="@+id/txtRemoveLetterInfo"
        android:text="Use" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtRemoveLetterInfo"
        android:layout_alignStart="@+id/txtRemoveLetterInfo"
        android:layout_below="@+id/txtRemoveLetterCost"
        android:layout_marginTop="8dp"
        android:text="Cancel" />
</RelativeLayout>