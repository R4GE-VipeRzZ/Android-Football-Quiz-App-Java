<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dont_have_domain.football_logo_quiz.arsenal_badge"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/txtRemoveLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="Not Enough Coins" />

    <TextView
        android:id="@+id/txtRemoveLetterInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRemoveLetter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="You don't have enough coins"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnMoreCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCloseDialog"
        android:layout_alignBottom="@+id/btnCloseDialog"
        android:layout_alignEnd="@+id/txtRemoveLetterInfo"
        android:layout_alignRight="@+id/txtRemoveLetterInfo"
        android:text="More Coins" />

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtRemoveLetterInfo"
        android:layout_alignStart="@+id/txtRemoveLetterInfo"
        android:layout_below="@+id/txtRemoveLetterInfo"
        android:layout_marginTop="8dp"
        android:text="Close" />
</RelativeLayout>