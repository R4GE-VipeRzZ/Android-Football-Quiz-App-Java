<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass_background_normal">

    <Button
        android:id="@+id/btnVibrations"
        android:layout_width="606dp"
        android:layout_height="141dp"
        android:background="@drawable/custom_button_xlarge_vibration_on"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnVibrationButtons"
        android:layout_width="606dp"
        android:layout_height="141dp"
        android:background="@drawable/custom_button_xlarge_button_vibration_on"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp" />

    <Button
        android:id="@+id/btnCorrectSound"
        android:layout_width="606dp"
        android:layout_height="141dp"
        android:background="@drawable/custom_button_xlarge_correct_sound_off"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp" />

    <Button
        android:id="@+id/btnButtonSound"
        android:layout_width="606dp"
        android:layout_height="141dp"
        android:background="@drawable/custom_button_xlarge_button_sound_off"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="502dp" />
</RelativeLayout>